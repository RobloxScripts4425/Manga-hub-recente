local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Manga Hub 4.2.1", HidePremium = false, SaveConfig = true, ConfigFolder = "MangaHub"})

-- Aba "Audio"
local AudioTab = Window:MakeTab({
    Name = "Audio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Textbox para o ID do áudio
local audioId
AudioTab:AddTextbox({
    Name = "ID do Audio",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        audioId = Value
    end    
})

-- Botão para ativar o áudio e pegar a Sniper
AudioTab:AddButton({
    Name = "Ativar Audio",
    Callback = function()
        -- Pegar a Sniper
        local args = {
            [1] = "PickingTools",
            [2] = "Sniper"
        }

        local success, errorMsg = pcall(function()
            game:GetService("ReplicatedStorage").RE:FindFirstChild("1Too1l"):InvokeServer(unpack(args))
        end)

        if success then
            -- Equipar a Sniper
            local player = game.Players.LocalPlayer
            local backpack = player.Backpack

            -- Verificar se a Sniper foi adicionada ao inventário
            local sniper = backpack:FindFirstChild("Sniper")
            if sniper then
                sniper.Parent = player.Character -- Equipar a Sniper
                wait(0.1) -- Pequeno delay para garantir que o item esteja equipado

                -- Criar um objeto de áudio e configurar
                local audio = Instance.new("Sound")
                audio.SoundId = "rbxassetid://" .. audioId
                audio.Parent = sniper -- Colocar o áudio na Sniper
                audio:Play()

                -- Deixar o áudio FE
                audio.OnFinished:Connect(function()
                    audio:Destroy() -- Remover o áudio após tocar
                end)
                
                -- Notificação de sucesso
                OrionLib:Notify("Sucesso!", "Áudio ativado e Sniper equipada.", 5)
            else
                OrionLib:Notify("Erro!", "Sniper não encontrada no inventário.", 5)
            end
        else
            OrionLib:Notify("Erro!", "Não foi possível pegar a Sniper: " .. errorMsg, 5)
        end
    end    
})

-- Botão Anti-Sit
AudioTab:AddButton({
    Name = "Anti - Sit",
    Callback = function()
        local player = game.Players.LocalPlayer
        local humanoid = player.Character and player.Character:FindFirstChildOfClass("Humanoid")
        
        if humanoid then
            -- Loop para desativar Humanoid.Sit
            while true do
                humanoid.Sit = false -- Desativa a ação de sentar
                wait(0.1) -- Tempo de espera entre as iterações
            end
        else
            OrionLib:Notify("Erro!", "Humanoid não encontrado.", 3)
        end
    end    
})

OrionLib:Init()

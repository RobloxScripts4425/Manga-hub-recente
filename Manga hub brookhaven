local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Manga Hub 4.2.1", HidePremium = false, SaveConfig = true, ConfigFolder = "MangaHub"})

-- Aba "Jogador"
local PlayerTab = Window:MakeTab({
    Name = "Jogador",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Aba "Áudio"
local AudioTab = Window:MakeTab({
    Name = "Áudio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Textbox para o ID do áudio
local AudioId
AudioTab:AddTextbox({
    Name = "ID do Áudio",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        AudioId = Value
    end    
})

-- Função para pegar e equipar a Sniper
local function getAndEquipSniper()
    local args = {
        [1] = "PickingTools",
        [2] = "Sniper"
    }
    local replicatedStorage = game:GetService("ReplicatedStorage")
    replicatedStorage.RE:FindFirstChild("1Too1l"):InvokeServer(unpack(args))

    local player = game.Players.LocalPlayer
    local backpack = player:WaitForChild("Backpack")
    local sniper = backpack:FindFirstChild("Sniper")

    if sniper then
        player.Character.Humanoid:EquipTool(sniper)
        return sniper
    else
        OrionLib:MakeNotification({
            Name = "Erro",
            Content = "Sniper não encontrada no inventário!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
        return nil
    end
end

-- Botão para ativar o áudio FE
AudioTab:AddButton({
    Name = "Ativar Áudio (FE)",
    Callback = function()
        local sniper = getAndEquipSniper()
        if sniper and AudioId then
            local sound = Instance.new("Sound")
            sound.SoundId = "rbxassetid://" .. AudioId
            sound.Volume = 10
            sound.Parent = sniper
            sound:Play()

            -- Notificação de áudio tocando
            OrionLib:MakeNotification({
                Name = "Áudio",
                Content = "Áudio tocando para outros jogadores",
                Image = "rbxassetid://4483345998",
                Time = 3
            })

            -- Remover o som após 3 segundos (anti-áudio do Brookhaven)
            game:GetService("Debris"):AddItem(sound, 3)
        else
            OrionLib:MakeNotification({
                Name = "Erro",
                Content = "ID de áudio ou Sniper inválidos!",
                Image = "rbxassetid://4483345998",
                Time = 5
            })
        end
    end
})

OrionLib:Init()

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({
    Name = "Manga Hub 4.2.1",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MangaHub"
})

-- Variável para armazenar o ID do áudio
local AudioId = "" 
local Player = game.Players.LocalPlayer

-- Função para pegar a sniper e tocar o áudio
local function PlayAudioForOthers()
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local args = {
        [1] = "PickingTools",
        [2] = "Sniper"
    }

    -- Pega a sniper do ReplicatedStorage
    ReplicatedStorage.RE:FindFirstChild("1Too1l"):InvokeServer(unpack(args))

    -- Equipar automaticamente a sniper
    local character = Player.Character
    if character then
        local backpack = Player:WaitForChild("Backpack")
        local sniper = backpack:FindFirstChild("Sniper")
        if sniper then
            sniper.Parent = character  -- Equipar sniper

            -- Criar som no sniper para tocar o áudio
            local Sound = Instance.new("Sound", sniper)
            Sound.SoundId = "rbxassetid://"..AudioId
            Sound.Volume = 5
            Sound:Play()

            -- Tornar inaudível para o próprio jogador
            Sound.LocalSound = true
        else
            warn("Sniper não encontrada")
        end
    end
end

-- Aba para os controles de áudio
local AudioTab = Window:MakeTab({
    Name = "Áudio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Textbox para o ID do áudio
AudioTab:AddTextbox({
    Name = "ID do Áudio",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        AudioId = Value
    end    
})

-- Botão para ativar o áudio
AudioTab:AddButton({
    Name = "Ativar Áudio",
    Callback = function()
        PlayAudioForOthers()
    end
})

-- Inicializa o OrionLib para carregar a interface
OrionLib:Init()

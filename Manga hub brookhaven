local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Manga Hub 4.2.1", HidePremium = false, SaveConfig = true, ConfigFolder = "MangaHub"})

-- Aba "Jogador"
local PlayerTab = Window:MakeTab({
    Name = "Jogador",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Funções do Jogador
PlayerTab:AddButton({
    Name = "+30 Velocidade",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = game.Players.LocalPlayer.Character.Humanoid.WalkSpeed + 30
        OrionLib:MakeNotification({Name = "Sucesso", Content = "+30 Velocidade ativada!", Duration = 3})
    end    
})

PlayerTab:AddButton({
    Name = "+30 Pulo",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = game.Players.LocalPlayer.Character.Humanoid.JumpPower + 30
        OrionLib:MakeNotification({Name = "Sucesso", Content = "+30 Pulo ativado!", Duration = 3})
    end    
})

PlayerTab:AddButton({
    Name = "Pulo e Velocidade Normal",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = 50
        OrionLib:MakeNotification({Name = "Sucesso", Content = "Valores restaurados para normal!", Duration = 3})
    end    
})

-- Aba "Troll"
local TrollTab = Window:MakeTab({
    Name = "Troll de mapa",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Função para Apagar o Chão (FE)
local function removeFloor()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Name ~= "Baseplate" then
            part.Transparency = 1
            part.CanCollide = false  -- Remove colisão para outros
        end
    end
    OrionLib:MakeNotification({Name = "Sucesso", Content = "Chão apagado!", Duration = 3})
end

-- Função para Restaurar o Chão (FE)
local function restoreFloor()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Name ~= "Baseplate" then
            part.Transparency = 0
            part.CanCollide = true  -- Restaura a colisão
        end
    end
    OrionLib:MakeNotification({Name = "Sucesso", Content = "Chão restaurado!", Duration = 3})
end

-- Botões para Apagar e Restaurar Chão
TrollTab:AddButton({
    Name = "Apagar Mapa",
    Callback = removeFloor
})

TrollTab:AddButton({
    Name = "Restaurar Mapa",
    Callback = restoreFloor
})

-- Aba "Áudio"
local AudioTab = Window:MakeTab({
    Name = "Áudio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- TextBox para ID de Áudio
local audioID
AudioTab:AddTextbox({
    Name = "ID do Áudio",
    Default = "Digite o ID do áudio aqui",
    TextDisappear = true,
    Callback = function(text)
        audioID = text
    end    
})

-- Botão para Ativar Áudio (FE)
AudioTab:AddButton({
    Name = "Ativar Áudio",
    Callback = function()
        local replicatedStorage = game:GetService("ReplicatedStorage")
        local remote = Instance.new("RemoteEvent", replicatedStorage)
        remote.Name = "PlayAudio"

        remote.OnServerEvent:Connect(function(player, audioId)
            local sound = Instance.new("Sound")
            sound.SoundId = "rbxassetid://" .. audioId
            sound.Parent = workspace  -- Colocar no workspace para todos ouvirem
            sound:Play()
            wait(3)  -- Dura 3 segundos
            sound:Destroy()  -- Remove o som após tocar
        end)

        -- Chamando o RemoteEvent para todos os jogadores
        remote:FireAllClients(audioID)  -- Toca o som para todos os jogadores

        OrionLib:MakeNotification({Name = "Sucesso", Content = "Áudio ativado!", Duration = 3})
    end    
})

OrionLib:Init()

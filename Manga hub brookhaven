-- Carregar biblioteca Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- Criar a interface principal
local Window = Fluent:CreateWindow({
    Name = "Manga Hub 4.2.1",
    Footer = "Fluent UI",
    Color = Color3.fromRGB(44, 120, 224), -- Ajuste a cor que desejar
    Position = UDim2.new(0.5, -200, 0.5, -250),
    Size = UDim2.new(0, 400, 0, 500),
    CanDrag = true
})

-- Função para criar abas
local PlayerTab = Window:CreateTab({
    Name = "Jogador",
    Icon = "rbxassetid://4483345998" -- Ícone da aba (se necessário)
})

local TrollTab = Window:CreateTab({
    Name = "Troll",
    Icon = "rbxassetid://4483345998"
})

local GameTab = Window:CreateTab({
    Name = "Jogo",
    Icon = "rbxassetid://4483345998"
})

-- Variáveis para controle do fling e suas funções
local flingSpeed = 900
local flingConnection
local playerName
local previousPosition

-- Função para iniciar o fling
local function startFling(playerIdentifier)
    -- Função similar à do exemplo anterior, ajuste conforme necessário
end

-- Função para parar o fling
local function stopFling()
    -- Função similar à do exemplo anterior
end

-- Adicionar TextBox na aba Jogador para inserir o nome do jogador
PlayerTab:CreateTextbox({
    Name = "Nome do Jogador",
    Placeholder = "Digite o nome do jogador",
    Callback = function(value)
        playerName = value
    end
})

-- Adicionar botão para iniciar o fling
PlayerTab:CreateButton({
    Name = "Iniciar Fling",
    Callback = function()
        if playerName then
            startFling(playerName)
        else
            print("Por favor, insira o nome do jogador.")
        end
    end
})

-- Adicionar botão para parar o fling
PlayerTab:CreateButton({
    Name = "Parar Fling",
    Callback = function()
        stopFling()
    end
})

-- Adicionar funcionalidade Anti-Sit
PlayerTab:CreateToggle({
    Name = "Anti-Sit",
    Default = false,
    Callback = function(state)
        -- Função Anti-Sit (já implementada no script anterior)
    end
})

-- Adicionar botões para ajustar o pulo
PlayerTab:CreateButton({
    Name = "+30 Pulo",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = character.Humanoid.JumpPower + 30
        end
    end
})

PlayerTab:CreateButton({
    Name = "Pulo e Velocidade Normal",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = 50 -- JumpPower padrão
            character.Humanoid.WalkSpeed = 16 -- WalkSpeed padrão
        end
    end
})

-- Adicionar funcionalidade para abrir as configurações do jogo
GameTab:CreateButton({
    Name = "Config do Jogo",
    Callback = function()
        -- Função para abrir configurações (simples ou avançadas)
    end
})

-- Adicionar funcionalidade de flutuar
PlayerTab:CreateToggle({
    Name = "Flutuar",
    Default = false,
    Callback = function(state)
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.Anchored = state
        end
    end
})

-- Adicionar botão para clonar itens
GameTab:CreateButton({
    Name = "Clonar Itens",
    Callback = function()
        -- Função de clonagem de itens
    end
})

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Manga Hub 4.2.1", HidePremium = false, SaveConfig = true, ConfigFolder = "MangaHub"})

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local localPlayer = Players.LocalPlayer
local playerGui = localPlayer:WaitForChild("PlayerGui")
local workspace = game:GetService("Workspace")

-- Função para apagar o mapa (visualmente, mas ainda andar sobre ele)
local function removeMap()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Anchored and part.Name ~= "HumanoidRootPart" then
            -- Torna o chão invisível, mas mantém a colisão
            part.Transparency = 1
            part.CanCollide = true
        end
    end
end

-- Função para tocar o áudio em outros jogadores (FE)
local function playAudioForOthers(audioId)
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= localPlayer then
            local audio = Instance.new("Sound")
            audio.SoundId = "rbxassetid://"..audioId
            audio.Volume = 5
            audio.TimePosition = 0
            audio.Parent = player.Character:FindFirstChild("HumanoidRootPart")
            audio:Play()

            -- Destruir o áudio após 3 segundos
            game:GetService("Debris"):AddItem(audio, 3)
        end
    end
end

-- Aba de Áudio
local AudioTab = Window:MakeTab({
    Name = "Áudio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- TextBox para inserir o ID do áudio
local audioId = ""
AudioTab:AddTextbox({
    Name = "Insira o ID do Áudio",
    Default = "",
    TextDisappear = true,
    Callback = function(value)
        audioId = value
    end
})

-- Botão para ativar o áudio
AudioTab:AddButton({
    Name = "Ativar Áudio",
    Callback = function()
        if audioId ~= "" then
            playAudioForOthers(audioId)
            print("Áudio ativado para outros jogadores.")
        else
            print("Por favor, insira um ID de áudio válido.")
        end
    end
})

-- Aba "Troll de mapa"
local MapTrollTab = Window:MakeTab({
    Name = "Troll de mapa",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Botão "Apagar Mapa"
MapTrollTab:AddButton({
    Name = "Apagar Mapa",
    Callback = function()
        removeMap()
        print("O chão foi apagado visualmente.")
    end
})

OrionLib:Init()

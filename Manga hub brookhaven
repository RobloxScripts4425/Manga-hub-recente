-- Carregar biblioteca Orion
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Criar a janela principal
local Window = OrionLib:MakeWindow({
    Name = "Manga Hub 4.2.1",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MangaHubConfig"
})

-- Criar abas
local PlayerTab = Window:MakeTab({
    Name = "Jogador",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local TrollTab = Window:MakeTab({
    Name = "Troll",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Função para aumentar a velocidade do jogador
PlayerTab:AddButton({
    Name = "+30 Velocidade",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.WalkSpeed = character.Humanoid.WalkSpeed + 30
        end
    end
})

-- Função para aumentar o pulo do jogador
PlayerTab:AddButton({
    Name = "+30 Pulo",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = character.Humanoid.JumpPower + 30
        end
    end
})

-- Função para restaurar a velocidade e o pulo do jogador para os valores normais
PlayerTab:AddButton({
    Name = "Pulo e Velocidade Normal",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.JumpPower = 50 -- Pulo padrão
            character.Humanoid.WalkSpeed = 16 -- Velocidade padrão
        end
    end
})

-- Função para iniciar o Fling
TrollTab:AddButton({
    Name = "Iniciar Fling",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            while true do
                wait(0.1)
                character.HumanoidRootPart.Velocity = Vector3.new(900, 0, 0) -- Velocidade de 900
            end
        end
    end
})

-- Função para parar o Fling e zerar a saúde do jogador
TrollTab:AddButton({
    Name = "Parar Fling",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("Humanoid") then
            character.Humanoid.Health = 0
        end
    end
})

-- Adicionar toggle para flutuar
PlayerTab:AddToggle({
    Name = "Flutuar",
    Default = false,
    Callback = function(state)
        local player = game.Players.LocalPlayer
        local character = player.Character
        if character and character:FindFirstChild("HumanoidRootPart") then
            character.HumanoidRootPart.Anchored = state
        end
    end
})

-- Criar aba "Jogo" e botão "Config do jogo"
local GameTab = Window:MakeTab({
    Name = "Jogo",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

GameTab:AddButton({
    Name = "Config do jogo",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
    end
})

-- Inicializar a GUI
OrionLib:Init()

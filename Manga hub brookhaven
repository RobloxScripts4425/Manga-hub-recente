local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Manga Hub 4.2.1 - hackmod_01299",
    SubTitle = "by hackmod_01299",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

local Tabs = {
    Main = Window:AddTab({ Title = "Main", Icon = "" }),
    Audio = Window:AddTab({ Title = "Áudio", Icon = "" }),
    TrollMap = Window:AddTab({ Title = "Troll de Mapa", Icon = "" })
}

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- Função para buscar a Bomb dentro de ClonedTools no ReplicatedStorage
local function getBombFromReplicatedStorage()
    local clonedTools = ReplicatedStorage:FindFirstChild("ClonedTools")
    if clonedTools then
        local bomb = clonedTools:FindFirstChild("Bomb")
        if bomb then
            return bomb
        else
            print("A 'Bomb' não foi encontrada em ClonedTools.")
        end
    else
        print("A pasta 'ClonedTools' não foi encontrada no ReplicatedStorage.")
    end
    return nil
end

-- Função para teleportar o jogador até a Bomb
local function teleportToBomb()
    local bomb = getBombFromReplicatedStorage()
    if bomb then
        -- Checa se o modelo possui uma PrimaryPart
        if bomb:IsA("Model") and bomb.PrimaryPart then
            LocalPlayer.Character.HumanoidRootPart.CFrame = bomb.PrimaryPart.CFrame
        else
            -- Se não tiver PrimaryPart, tenta pegar a primeira peça (Part) dentro do modelo
            local part = bomb:FindFirstChildWhichIsA("BasePart")
            if part then
                LocalPlayer.Character.HumanoidRootPart.CFrame = part.CFrame
            else
                print("Não foi possível encontrar uma peça na Bomb para teleportar.")
            end
        end
    end
end

-- Função para clicar na Bomb 100 vezes
local function clickBomb100Times()
    local bomb = getBombFromReplicatedStorage()
    if bomb then
        teleportToBomb()
        for i = 1, 100 do
            pcall(function()
                -- Verifica se há um ClickDetector para clicar
                local clickDetector = bomb:FindFirstChildWhichIsA("ClickDetector")
                if clickDetector then
                    fireclickdetector(clickDetector) -- Simula o clique na Bomb
                else
                    print("ClickDetector não encontrado na Bomb.")
                end
            end)
            wait(0.01) -- Controla a velocidade dos cliques
        end
        print("Clicou na Bomb 100 vezes!")
    end
end

-- Adicionando botão na aba Main
Tabs.Main:AddButton({
    Title = "Dupe Bomba",
    Description = "Pega 100 bombas no inventário.",
    Callback = function()
        clickBomb100Times()
    end
})

Window:SelectTab(1)

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "Manga Hub 4.2.1",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "MangaHub"
})

-- Função para exibir notificações
local function notify(title, content)
    OrionLib:MakeNotification({
        Name = title,
        Content = content,
        Duration = 5
    })
end

-- Notificação de emblema quando o script é executado
notify("Atenção", "O script está em beta, os bugs do script serão resolvidos em breve.")

-- Aba "Jogador"
local PlayerTab = Window:MakeTab({
    Name = "Jogador",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Adicionando a opção de áudio
local AudioTab = Window:MakeTab({
    Name = "Áudio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

AudioTab:AddButton({
    Name = "Ativar Áudio FE",
    Callback = function()
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local hrp = character:WaitForChild("HumanoidRootPart")

        -- Criar um novo objeto Sound
        local sound = Instance.new("Sound")
        sound.SoundId = "rbxassetid://[ID do seu áudio aqui]" -- Substitua pelo ID do áudio desejado
        sound.Volume = 10 -- Ajuste o volume como necessário
        sound.Parent = hrp

        -- Tocar o som
        sound:Play()

        -- Opcional: Parar o som após 3 segundos, se necessário
        wait(3)
        sound:Stop()

        notify("Áudio", "O áudio foi reproduzido.")
    end    
})

-- Outras abas e funcionalidades
-- (inclua o restante do seu script aqui)

OrionLib:Init()

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "Manga Hub 4.2.1", HidePremium = false, SaveConfig = true, ConfigFolder = "MangaHub"})

-- Aba "Audio"
local AudioTab = Window:MakeTab({
    Name = "Audio",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local AudioID

-- TextBox para inserir o ID do áudio
AudioTab:AddTextbox({
    Name = "ID do Audio",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        AudioID = Value
    end    
})

-- Função para tentar tocar o áudio para todos
AudioTab:AddButton({
    Name = "Ativar Audio",
    Callback = function()
        local tool = game:GetService("ReplicatedStorage").RE:FindFirstChild("1Too1l"):InvokeServer(unpack({"PickingTools", "Sniper"}))
        if tool then
            game.Players.LocalPlayer.Backpack:WaitForChild("Sniper"):Parent = game.Players.LocalPlayer.Character
            local sound = Instance.new("Sound", game.Players.LocalPlayer.Character.Sniper)
            sound.SoundId = "rbxassetid://"..AudioID
            sound:Play()
            -- Garantir que o áudio seja ouvido por todos
            wait(2.9)
            sound:Stop()
        else
            print("Sniper não encontrada")
        end
    end
})

-- Função Anti-Sit
AudioTab:AddButton({
    Name = "Anti-Sit",
    Callback = function()
        while true do
            if game.Players.LocalPlayer.Character.Humanoid.Sit then
                game.Players.LocalPlayer.Character.Humanoid.Sit = false
            end
            wait(0.1)
        end
    end
})

OrionLib:Init()
